extends ./layout

block main
    .main-content
      h1.display-1.m-3 Chatio
      form(action='/' method='POST')
          div(class="form-group row")
              label(for="inputEmail3" class="col-sm-2 col-form-label") username
              div(class="col-sm-10")
                  input(type="text" class="form-control" id="inputEmail3" placeholder="username" name='name')
          div(class="form-group row")
              label(for="inputPassword3" class="col-sm-2 col-form-label") Password
              div(class="col-sm-10")
                  input(type="password" class="form-control" id="inputPassword3" placeholder="Password" name='password')
          if error_message
              .alert.alert-danger(role='alert') #{error_message}
          div(class="form-group row")
              div(class="col-sm-10")
                  button.join-btn(type="submit" class="btn btn-primary") JOIN
    include ./includes/scripts
